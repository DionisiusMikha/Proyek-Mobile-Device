<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Menghitung_Mimpi"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".layout.ChatBot"
            android:exported="false"
            android:label="@string/title_activity_chat_bot"
            android:theme="@style/Theme.Menghitung_Mimpi" />
        <activity
            android:name=".layout.ChatBotActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|adjustResize" />
        <activity
            android:name=".layout.NewPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".layout.SecurityPinActivity"
            android:exported="false" />
        <activity
            android:name=".layout.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".layout.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".layout.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".layout.IntroSliderActivity"
            android:exported="false" />
        <activity
            android:name=".layout.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".layout.LoginRegisterActivity"
            android:exported="false" />
        <activity
            android:name=".layout.MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>